<section class="custom-banner">
  <div class="container custom-banner__inner">
    {% if section.settings.kicker != blank %}
      <div style="color:#e11d48; font-weight:700;">{{ section.settings.kicker }}</div>
    {% endif %}
    <h1>{{ section.settings.heading }}</h1>
    {% if section.settings.subheading != blank %}
      <p>{{ section.settings.subheading }}</p>
    {% endif %}

    <div class="custom-banner__cta">
      {% if section.settings.primary_text != blank %}
        <a class="btn" href="{{ section.settings.primary_link }}">{{ section.settings.primary_text }}</a>
      {% endif %}
      {% if section.settings.secondary_text != blank %}
        <a class="btn btn--secondary" href="{{ section.settings.secondary_link }}">{{ section.settings.secondary_text }}</a>
      {% endif %}
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Custom Banner (Test)",
  "settings": [
    { "type":"text", "id":"kicker", "label":"Top small text (red box)" },
    { "type":"text", "id":"heading", "label":"Heading (red box)", "default":"Travel Gear For Every Journey" },
    { "type":"text", "id":"subheading", "label":"Subheading (red box)", "default":"Line-art inspired essentials, crafted for explorers." },
    { "type":"text", "id":"primary_text", "label":"Primary Button Text", "default":"Shop now" },
    { "type":"url",  "id":"primary_link", "label":"Primary Button Link" },
    { "type":"text", "id":"secondary_text", "label":"Secondary Button Text", "default":"Learn more" },
    { "type":"url",  "id":"secondary_link", "label":"Secondary Button Link" }
  ],
  "presets": [{ "name":"Custom Banner (Test)" }]
}
{% endschema %}